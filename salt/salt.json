{
  "description": "Gentoo Linux (salt)",
  "variables": {
    "headless": "true",
    "minion_id": "roflpc",
    "ssh_username": "root",
    "ssh_password": "correcthorsebatterystaple"
  },
  "builders": [{
    "type": "qemu",
    "vm_name": "gentoo-salt",
    "output_directory": "build/gentoo-salt",
    "disk_image": "true",
    "cpus": "{{user `cpus`}}",
    "memory": "{{user `memory`}}",
    "disk_interface": "ide",
    "net_device": "e1000",
    "qemuargs": [
       ["-bios", "/usr/share/edk2-ovmf/OVMF.fd"]
    ],
    "headless": "{{user `headless`}}",
    "iso_url": "build/gentoo-iso/gentoo-iso",
    "iso_checksum_type": "none",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_password": "{{user `ssh_password`}}",
    "shutdown_command": "shutdown -h now"
  },{
    "type": "virtualbox-ovf",
    "vm_name": "gentoo-salt",
    "output_directory": "build/gentoo-salt",
    "guest_additions_mode": "disable",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--cpus", "12"],
      ["modifyvm", "{{.Name}}", "--firmware", "efi"],
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--vram", "{{user `vram`}}"],
      ["modifyvm", "{{.Name}}", "--nictype1", "82540EM"]
    ],
    "headless": "{{user `headless`}}",
    "source_path": "build/gentoo-iso/gentoo-iso.ovf",
    "ssh_password": "{{user `ssh_password`}}",
    "ssh_username": "{{user `ssh_username`}}",
    "shutdown_command": "shutdown -h now"
  }],
  "provisioners": [{
    "type": "file",
    "source": "salt/minion",
    "destination": "/tmp/minion"
  },{
    "type": "file",
    "source": "salt/pillar",
    "destination": "/tmp/pillar"
  },{
    "type": "file",
    "source": "salt/pillar.asc",
    "destination": "/tmp/pillar.asc"
  },{
    "type": "file",
    "source": "build/salt",
    "destination": "/tmp/salt"
  },{
    "type": "shell",
    "environment_vars": [
      "MINION_ID={{user `minion_id`}}"
    ],
    "scripts": [
      "salt/01-install"
    ]
  }]
}
