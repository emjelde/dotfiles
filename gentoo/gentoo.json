{
  "description": "Gentoo Linux (iso)",
  "variables": {
    "headless": "true",
    "ssh_username": "root",
    "ssh_password": "correcthorsebatterystaple",
    "root_volume_group": "roflpc"
  },
  "builders": [{
    "type": "qemu",
    "vm_name": "gentoo-iso",
    "output_directory": "{{user `build`}}/gentoo-iso",
    "cpus": "{{user `cpus`}}",
    "memory": "{{user `memory`}}",
    "disk_interface": "ide",
    "net_device": "e1000",
    "headless": "{{user `headless`}}",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "sha512",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_password": "{{user `ssh_password`}}",
    "boot_command": [
      "gentoo-nofb<enter>",
      "<wait10>",
      "<enter>",
      "<wait20s>",
      "passwd {{user `ssh_username`}}<enter>",
      "{{user `ssh_password`}}<enter>",
      "{{user `ssh_password`}}<enter>",
      "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config<enter>",
      "sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config<enter>",
      "/etc/init.d/sshd start<enter>"
    ],
    "shutdown_command": "shutdown -h now"
  },{
    "type": "virtualbox-iso",
    "vm_name": "gentoo-iso",
    "output_directory": "{{user `build`}}/gentoo-iso",
    "guest_os_type": "Gentoo_64",
    "guest_additions_mode": "disable",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--vram", "{{user `vram`}}"],
      ["modifyvm", "{{.Name}}", "--nictype1", "82540EM"]
    ],
    "headless": "{{user `headless`}}",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "sha512",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_password": "{{user `ssh_password`}}",
    "boot_command": [
      "gentoo-nofb<enter>",
      "<wait10>",
      "<enter>",
      "<wait10>",
      "passwd {{user `ssh_username`}}<enter>",
      "{{user `ssh_password`}}<enter>",
      "{{user `ssh_password`}}<enter>",
      "sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/' /etc/ssh/sshd_config<enter>",
      "sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config<enter>",
      "/etc/init.d/sshd start<enter>"
    ],
    "shutdown_command": "shutdown -h now"
  }],
  "provisioners": [{
    "type": "file",
    "source": "kernel",
    "destination": "/tmp"
  },{
    "type": "file",
    "source": "{{user `build`}}/autobuilds/keyring",
    "destination": "/tmp"
  },{
    "type": "file",
    "source": "portage",
    "destination": "/tmp"
  },{
    "type": "shell",
    "environment_vars": [
      "AUTOBUILD_KEYRING=/tmp/keyring",
      "BOOT_DEVICE=/dev/sda1",
      "CPU_FLAGS_X86={{user `cpuflags`}}",
      "CPUS={{user `cpus`}}",
      "LUKS_DEVICE=/dev/sda2",
      "MIRROR={{user `mirror`}}",
      "ROOT_DEVICE=/dev/{{user `root_volume_group`}}/root",
      "ROOT_VOLUME_GROUP={{user `root_volume_group`}}",
      "RSYNC_MIRROR={{user `rsync_mirror`}}",
      "SOURCE=/tmp",
      "STAGE3={{user `stage3`}}",
      "SWAP_DEVICE=/dev/{{user `root_volume_group`}}/swap",
      "USE_VIRTUALBOX={{user `use_virtualbox`}}"
    ],
    "scripts": [
      "gentoo/01-partition",
      "gentoo/02-stage3",
      "gentoo/03-mounts",
      "gentoo/04-resolvconf",
      "gentoo/05-portage",
      "gentoo/06-timezone",
      "gentoo/07-fstab",
      "gentoo/08-kernel",
      "gentoo/09-network",
      "gentoo/10-system"
    ]
  }]
}
